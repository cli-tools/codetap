{
  "name": "codetap",
  "displayName": "CodeTap",
  "description": "Discover and connect to CodeTap VS Code Server sessions in containers",
  "version": "0.3.0",
  "publisher": "codetap",
  "license": "0BSD",
  "repository": {
    "type": "git",
    "url": "https://github.com/cli-tools/codetap.git"
  },
  "homepage": "https://github.com/cli-tools/codetap",
  "bugs": {
    "url": "https://github.com/cli-tools/codetap/issues"
  },
  "engines": {
    "vscode": "^1.87.0"
  },
  "enabledApiProposals": [
    "resolvers"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onResolveRemoteAuthority:codetap",
    "onView:codetap.sessions",
    "onCommand:codetap.connect",
    "onCommand:codetap.refresh",
    "onCommand:codetap.copyToken"
  ],
  "main": "./out/extension.js",
  "extensionKind": [
    "ui"
  ],
  "files": [
    "out/**/*.js",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codetap",
          "title": "CodeTap",
          "icon": "$(remote)"
        }
      ]
    },
    "views": {
      "codetap": [
        {
          "id": "codetap.sessions",
          "name": "Sessions"
        }
      ]
    },
    "commands": [
      {
        "command": "codetap.connect",
        "title": "CodeTap: Connect to Session",
        "icon": "$(plug)"
      },
      {
        "command": "codetap.refresh",
        "title": "CodeTap: Refresh Sessions",
        "icon": "$(refresh)"
      },
      {
        "command": "codetap.copyToken",
        "title": "CodeTap: Copy Connection Token"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "codetap.refresh",
          "when": "view == codetap.sessions",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "codetap.connect",
          "when": "view == codetap.sessions && viewItem == aliveSession",
          "group": "inline"
        },
        {
          "command": "codetap.copyToken",
          "when": "view == codetap.sessions && viewItem == aliveSession"
        }
      ]
    },
    "configuration": {
      "title": "CodeTap",
      "properties": {
        "codetap.socketDir": {
          "type": "string",
          "default": "/dev/shm/codetap",
          "description": "Directory to scan for CodeTap session sockets"
        },
        "codetap.pollInterval": {
          "type": "number",
          "default": 3000,
          "description": "Polling interval in milliseconds for session discovery"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "vscode:prepublish": "npm run compile",
    "package": "vsce package --out codetap.vsix"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.87.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.3.0"
  }
}
